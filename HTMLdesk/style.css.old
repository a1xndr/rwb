@import url(fonts.css); 
body {
	background-color: #212a40;
	color: #d9d9d9;
	padding: 0px;
	margin: 0px;
	font-family:"MyriadProRegular";
	/*font-family:"Fontin Sans";*/
	font-size:10pt;
}
/* Main Structre Divs */
#left-panel{
	width:150px;
	float:left;
	padding:5px;
	/*position: fixed;*/
}
#icosahedron{
	/*background-color:#313a50;*/
}
#center-panel{
	margin-left:150px;
	margin-right:100px;
}
#right-panel{
	float:right;
	width:100px;
	text-align:right;
}
#bottomnavbar{
	position: fixed;
	bottom: 0;
	width: 100%;
	padding:0px;
	margin:0px;
	font-size:12pt;
}


/* Center Columns */
#center-left-column{
	float:left;
	width:50%;
	overflow:hidden;
}
#center-right-column{
	margin-left:50%;
	overflow:hidden;
}


#workspaces{
	background-color:#212a40;
	vertical-align:text-bottom;
	color:#d9d9d9;
	font-weight: bold;
	padding-right:5px;
	z-index:1;
	float:left;
}
#workspacelist {
	position:absolute;
	display:inline-block;
}
.inactive_workspace {
	display: inline-block;	
	margin-left:3px;
	margin-right:3px;
	transform: rotateY(360deg);
	transition-property: all;
	transition-duration: 250ms;
}
.active_workspace {
	display: inline-block;	
	margin-left:3px;
	margin-right:3px;
	color: #bf2e2e;
	transform: rotateY(360deg);
	transition-property: all;
	transition-duration: 250ms;
}


#newsticker {
	display:inline-block;
	vertical-align:text-bottom;
	right:0px;
	width:auto;
	z-index:0;
	background-color:#212a40;
	float:right;
}

#clock{
	right:0px;
	z-index:1;
	position:absolute;
}
#time{
	float:right;
	background-color:#212a40;
	z-index:2;
}
#left-gradient{
	float:right;
	width:20px;
	background: linear-gradient(to left, rgba(33, 42, 64, 1),  rgba(33, 42, 64, 0));
}

#right-gradient{
	width:20px;
	float:left;
	background: linear-gradient(to left, rgba(33, 42, 64, 0),  rgba(33, 42, 64, 1));
}

.ex_rate {
text-align:right;
}

sup{
	margin-left:1px;
}
h3 {
 margin:0;
 margin-top:5px;
 margin-bottom:10px;
}

h4 {
	margin:0;
	margin-top:5px;
	margin-bottom:5px;
	font-weight:normal;
}

a{
	color:#DEDEFF;	
}

a.odd{
	color:#DEDEFF;
	line-height: 1.6em;
}
a.even{
	color:#CACAFF;	
	line-height: 1.6em;
}

/*RSS Style */

ul{
	list-style-type: none;
}

.rssRow div{
	font-size:10px;
	margin:0;
	margin-top:5px;
	margin-bottom:5px;
}
